{
  "compilerOptions": {
    "jsx": "react-native",
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"
  },
  "include": [
    "./src/**/*",
    "./assets/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
