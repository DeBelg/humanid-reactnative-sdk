{
  "compilerOptions": {
    "jsx": "react-native",
    "target": "es6",
    "module": "es6",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "lib"
  },
  "exclude": [
    "node_modules",
    "lib"
  ]
}
